<view class="discount-detail">
    <view class="detail-mask">
        <view class="detail">
            <view class="detail-title">
                <span class="detail-title-text">促销信息</span>
                <image bindtap="shutDown" src="https://static.meituan.net/bs/MYFE/wxapp-wallet/file/images/close-dark.png"></image>
            </view>
            <scroll-view scrollY bindscroll="onScroll" bindscrolltolower="toLower" bindscrolltoupper="toTop" class="detail-main" lowerThreshold="20" upperThreshold="{{trueTop-20}}">
                <view class="discount-single" wx:if="{{discountList&&discountList.length>0}}">
                    <span class="discount-type">折扣 </span>
                    <span class="discount-text">
                        <span class="single-text" wx:for="{{discountList}}" wx:key="{{index}}">{{item.discountShow}} </span>
                        <span class="discount-tip">不同时间可能有价格浮动，请以下单时的价格为准</span>
                    </span>
                </view>
                <view class="discount-single" wx:if="{{setTicketList&&setTicketList.length>0}}">
                    <span class="discount-type">套票 </span>
                    <span class="discount-text">
                        <span class="single-text" wx:for="{{setTicketList}}" wx:key="{{index}}">{{item.discountShow}} </span>
                        <span class="discount-tip">不同时间可能有价格浮动，请以下单时的价格为准</span>
                    </span>
                </view>
            </scroll-view>
            <view class="{{showBottom?'scroll-bottom':''}}"></view>
        </view>
    </view>
</view>
