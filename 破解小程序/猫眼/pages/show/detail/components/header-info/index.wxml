<view class="show-info">
    <image class="tap" src="{{pixelRatio===3?'https://static.meituan.net/bs/MYFE/wxapp-wallet/file/images/show/newDetail/offical@3x.png':'https://static.meituan.net/bs/MYFE/wxapp-wallet/file/images/show/newDetail/offical@2x.png'}}" wx:if="{{performance.self&&performance.generalAgent===0}}"></image>
    <image class="tap" src="{{pixelRatio===3?'https://static.meituan.net/bs/MYFE/wxapp-wallet/file/images/show/newDetail/total-proxy@3x.png':'https://static.meituan.net/bs/MYFE/wxapp-wallet/file/images/show/newDetail/total-proxy@2x.png'}}" wx:if="{{performance.self&&performance.generalAgent===1}}"></image>
    <text class="show-name {{performance.self?'show-name-has-tap':''}}">{{performance.name}}</text>
    <text class="show-date">{{performance.showTimeRange}}</text>
    <view class="show-price" wx:if="{{!performance.priceRangeType}}">
        <text>{{performance.priceList[0]}}</text>
        <text class="show-price-yuan">元</text>
        <text wx:if="{{!!performance.priceList&&performance.priceList.length>=2}}">
            <text class="show-price-line">-</text>
            <text>{{performance.priceList[1]}}</text>
            <text class="show-price-yuan">元</text>
        </text>
    </view>
    <view class="show-price" wx:elif="{{performance.priceRangeType===1}}">
        <text class="show-price-pending">价格待定</text>
    </view>
</view>
