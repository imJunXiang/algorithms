<form bindsubmit="onSubmit" class="select">
    <view bindchange="onSelectedChange" class="select__list" name="selectedRealnameList" wx:if="realnameList.length">
        <view class="select__item {{item.default?'select__item--default':''}}" wx:for="{{selectedIDList}}" wx:key="{{item.id}}">
            <view bindtap="onRealnameSelect" class="select__checkbox {{item.isSelected?'select__checkbox--checked':''}}" data-index="{{index}}"></view>
            <view class="select__content">
                <view class="select__name">{{item.userNameDisplay}}</view>
                <view class="select__idnum">{{item.idNumberDisplay}}</view>
            </view>
            <view catchtap="onEditTap" class="select__edit" data-index="{{index}}"></view>
            <view catchtap="onDelTap" class="select__del" data-index="{{index}}"></view>
        </view>
    </view>
    <view catchtap="onAddTap" class="select__add">添加购票人信息</view>
    <view class="select__confirmwrapper">
        <button class="select__confirm {{!selected.length?'select__confirm--disabled':''}}" formType="submit">确认选择</button>
    </view>
</form>
